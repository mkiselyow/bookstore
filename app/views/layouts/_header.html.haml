%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand Bookstore
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            =link_to "Home", home_path
          %li
            =button_to "Shop", data_toggle: 'collapse', aria_expanded: 'false', aria_controls: 'menu', id: 'menu'
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                =link_to "Mobile development", class: 'collapse-link'
              %li
                =link_to "Photo", class: 'collapse-link'
              %li
                =link_to "Web design", class: 'collapse-link'
          %li
            =link_to "My account"
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            =link_to "Home", home_path
          %li.dropdown
            
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
            %ul.dropdown-menu
              %li
                =link_to "Mobile development"
              %li
                =link_to "Photo"
              %li
                =link_to "Web design"
              %li.divider{role: "separator"}
              %li
                =link_to "Log out"
          %li
            =link_to "My account"
