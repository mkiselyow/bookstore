%main.container
  =ACTIVE_ADMIN_LOGIN
  %h1.general-title-margin=t('.checkout')
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs=t('.address')
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs=t('.delivery')
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs=t('.payment')
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs=t('.confirm')
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs=t('.complete')
  =form_with url: addresses_path, class: 'res-mb-100' do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle=t('.billing_address')
          %p.general-info-text=t('.all_fields_are_required')
        .col-md-5.col-md-offset-1
          %h3.general-subtitle=t('.shipping_address')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle=t('.billing_address')
          %p.general-info-text=t('.all_fields_are_required')
        =render partial: 'addresses/form', locals: { model: 'billing_address', f: f }
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle=t('.shipping_address')
        =render partial: 'addresses/form', locals: { model: 'shipping_address', f: f }
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text=t('.use_billing_address')
    .general-text-align.mb-60
      %p.in-gold-500.font-18=t('.order_summary')
      %table.general-summary-table
        %tr
          %td
            %p.font-16=t('.item_total')
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16=t('.order_total')
          %td
            %p.font-16 €117.69
      %button.btn.disabled.center-block.mb-20=t('.save_and_continue')